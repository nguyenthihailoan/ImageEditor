<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:gravity="bottom"
    android:orientation="vertical"
    tools:context=".screens.fragments.AdjustFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_adjusts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_25"></android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70">

        <ImageView
            android:id="@+id/cancel_adjust"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_8"
            android:padding="@dimen/dp_15"
            android:src="@drawable/cancel_selector" />

        <com.gallery.editor.image.photoeditor.widgets.textview.TextViewLight
            android:id="@+id/name_adjust"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/adjust"
            android:textColor="@color/color_white"
            android:textSize="@dimen/sp_18" />

        <ImageView
            android:id="@+id/apply_adjust"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_12"
            android:padding="@dimen/dp_10"
            android:src="@drawable/check_selector" />
    </RelativeLayout>
</LinearLayout>